<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_weather_default_label" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin_top</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="style_weather_default_value" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin_top</item>
        <item name="android:textSize">@dimen/feels_like_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="style_weather_default_linear_layout_values" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
    </style>
</resources>