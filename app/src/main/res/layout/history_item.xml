<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_card_margin"
    android:backgroundTint="@color/background"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:strokeColor="@color/card_stroke"
    app:strokeWidth="@dimen/card_stroke_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/history_item_city_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/history_item_padding"
            android:textAlignment="center"
            android:textSize="@dimen/history_item_city_text_size"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/history_item_temperature_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/history_item_padding"
            android:textAlignment="center"
            android:textSize="@dimen/history_item_temp_text_size"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/history_item_condition_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/history_item_padding"
            android:textAlignment="center"
            android:textSize="@dimen/history_item_condition_text_size" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>