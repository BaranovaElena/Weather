<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_margin="@dimen/default_card_margin"
    android:backgroundTint="@color/background"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:contentPadding="@dimen/default_card_padding"
    app:strokeColor="@color/card_stroke"
    app:strokeWidth="@dimen/button_stroke_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city_list_item_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/city_list_item_padding"
            android:textSize="@dimen/city_list_item_text_size"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>